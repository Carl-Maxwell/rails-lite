<form action="/cats" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
  >
  <input
    type="hidden"
    name="_method"
    value="patch"
  >

  <label>Name
    <input type="text" name="cat[name]" value="<%= @cat.name %>">
  </label>

  <input type="submit">
</form>
